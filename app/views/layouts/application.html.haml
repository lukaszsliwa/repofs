!!!
%html
  %head
    %title
      Repofs &middot;
      - if content_for?(:title)
        = yield :title
      - else
        Private Git Repositories &middot; Private Git Servers &middot; Independent Git Instance
    %meta{:charset => "utf-8"}
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %meta{:content => "", :name => "description"}
    %meta{:content => "Łukasz Śliwa", :name => "author"}

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true

    %link{:href => "http://fonts.googleapis.com/css?family=Open+Sans:400,300,700,600", :rel => "stylesheet"}
    %link{:href => "http://fonts.googleapis.com/css?family=Open+Sans+Condensed:700,300", :rel => "stylesheet", :type => "text/css"}
  %body
    %nav.navbar
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{"data-target" => "#menu", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to 'RepoFS', root_path, class: 'navbar-brand'
        #menu.collapse.navbar-collapse
          %ul.nav.navbar-nav.navbar-right
            %li.active= link_to 'Home', root_path
            %li= link_to 'Features', '#features'
            %li= link_to 'Pricing', '#pricing'
            %li= link_to 'Sign up now', ''
    = yield