.col-xs-3(id="developer-#{developer.login}")
  .developer
    .panel-header
      %i.fa.fa-user
      = developer.login
    .panel-body
      .row
        .col-xs-6
          %h4 Repositories
          %b= developer.repositories_count
        .col-xs-6
          %h4 Keys
          %b= developer.keys_count
        .clearfix
    .panel-footer
      .pull-left
        = developer.email
      .pull-right
        = link_to 'Delete', node_developer_path(@node, developer.login, format: :js), class: 'btn btn-sm btn-default', method: :delete, remote: true, data: { confirm: 'Are you sure?' }
      .clearfix