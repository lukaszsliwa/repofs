.col-xs-3(id="key-#{key.token}")
  .key
    .panel-header
      %i.fa.fa-key
      = truncate key.token, length: 20
    .panel-body
      = truncate key.content, length: 34
    .panel-footer
      .pull-left
        = l key.created_at.to_datetime, format: :long if key.created_at
      .pull-right
        = link_to 'Delete', node_key_path(@node, key.token, format: :js), method: :delete, class: 'btn btn-default btn-sm', remote: true, data: { confirm: 'Are you sure?' }
      .clearfix