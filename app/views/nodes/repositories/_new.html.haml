= form_for repository, as: :repository, url: node_repositories_path(@node, format: :js), remote: true do |f|
  .panel-body
    - if (errors = f.object.errors.full_messages).present?
      .form-group
        %ul.errors
          - errors.each do |error|
            %li= error
    .form-group
      = f.text_field :handle, class: 'form-control', placeholder: 'Handle'
    .form-group
      = f.text_field :space_handle, class: 'form-control', placeholder: 'Work space'
  .panel-footer
    = submit_tag 'Create a Repository', class: 'btn btn-sm btn-default'