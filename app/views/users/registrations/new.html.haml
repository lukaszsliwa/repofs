.container
  .row
    %h3 Sign up
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form margin-center' }) do |f|
      = devise_error_messages!
      .form-group
        = f.label :first_name
        = f.text_field :first_name, autofocus: true, class: 'form-control input-lg'
      .form-group
        = f.label :last_name
        = f.text_field :last_name, class: 'form-control input-lg'
      .form-group
        = f.label :email, 'E-mail'
        = f.email_field :email, class: 'form-control input-lg'
      .form-group
        = f.label :password
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} characters minimum)
        %br
        = f.password_field :password, autocomplete: "off", class: 'form-control input-lg'
      .form-group
        = f.label :password_confirmation
        %br
        = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control input-lg'
      .actions
        = f.submit "Sign up", class: 'btn btn-lg btn-success btn-round btn-grad'